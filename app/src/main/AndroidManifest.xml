<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/launcher_ic_2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/launcher_ic_2"
        android:supportsRtl="true"
        android:theme="@style/Theme.PlayGround"
        tools:targetApi="31">
        <activity
            android:name=".view.mainscreen.profile.ProfileViewActivity"
            android:exported="false" />
        <activity
            android:name=".view.mainscreen.notifications.NotificationHandlerActivity"
            android:configChanges="screenSize|orientation"
            android:exported="false" />
        <activity
            android:name=".view.mainscreen.activityhandler.ShowSportsActivity"
            android:configChanges="orientation|screenSize|uiMode"
            android:exported="false" />
        <activity
            android:name=".view.mainscreen.profile.EditProfileActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|uiMode"

            android:exported="false" />
        <activity
            android:name=".view.mainscreen.activityhandler.NewSportActivityCreaterActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|uiMode"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.mainscreen.HomeMainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|uiMode"
            android:exported="false" />
        <activity
            android:name=".view.auth.AuthActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>