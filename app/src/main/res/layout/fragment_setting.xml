<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingHorizontal="15dp"
    android:paddingBottom="20dp"
    android:layout_height="wrap_content"

    tools:context=".view.mainscreen.profile.SettingFragment">



    <TextView
        android:id="@+id/edit_profile_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:text="Edit Profile"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:drawableStart="@drawable/edit_ic"
        android:drawableTint="@color/black"
        android:drawablePadding="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/edit_profile_changepassword_breaker"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="40dp"
        android:layout_height="1dp"
        android:background="@color/gray80"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_profile_tv" />
    <TextView
        android:id="@+id/change_password_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:drawableStart="@drawable/password_edit_ic"
        android:drawableTint="@color/black"
        android:drawablePadding="10dp"
        android:text="Change Password"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/edit_profile_changepassword_breaker" />
    <View
        android:id="@+id/change_password_logout_breaker"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="40dp"
        android:background="@color/gray80"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_password_tv" />
    <TextView
        android:id="@+id/logout_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:text="Log out"
        android:drawableStart="@drawable/ic_exit"
        android:drawableTint="@android:color/holo_red_dark"
        android:drawablePadding="10dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/change_password_logout_breaker" />


</androidx.constraintlayout.widget.ConstraintLayout>